            <div class="form-group">
                <div class="col-sm-12 nopadding">
                    <div class="control-label">
                        @Html.LabelFor(m => m.EntityId, new { @data_test_selector = "lblEntityId" })
                    </div>
                    <div class="control-md">
                        @Html.TextBoxFor(model => model.EntityId, new { @data_test_selector = "txtEntityId" })
                        @Html.ValidationMessageFor(model => model.EntityId, "", new { @data_test_selector = "valEntityId" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 nopadding">
                    <div class="control-label">
                        @Html.LabelFor(m => m.FreightTaxGroupCode, new { @data_test_selector = "lblFreightTaxGroupCode" })
                    </div>
                    <div class="control-md">
                        @Html.TextBoxFor(model => model.FreightTaxGroupCode, new { @data_test_selector = "txtFreightTaxGroupCode" })
                        @Html.ValidationMessageFor(model => model.FreightTaxGroupCode, "", new { @data_test_selector = "valFreightTaxGroupCode" })
