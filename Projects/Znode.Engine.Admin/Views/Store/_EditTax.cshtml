                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 nopadding">
                    <div class="control-label">
                        @Html.LabelFor(m => m.Custom2, new { @data_test_selector = "lblCustom2" })
                    </div>
                    <div class="control-md">
                        @Html.TextBoxFor(model => model.Custom2, new { @data_test_selector = "txtCustom2" })
                        @Html.ValidationMessageFor(model => model.Custom2, "", new { @data_test_selector = "valCustom2" })
                    </div>
                </div>
            </div>

            @Html.HiddenFor(m => m.PortalId)
            @Html.HiddenFor(m => m.TaxPortalId)
        }
    </section>
</div>