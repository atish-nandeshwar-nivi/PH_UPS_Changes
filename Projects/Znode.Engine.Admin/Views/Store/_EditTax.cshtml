                        @Html.ValidationMessageFor(model => model.FreightTaxItemCode, "", new { @data_test_selector = "valFreightTaxItemCode" })
                    </div>
                </div>
            </div>

            <h3 class="section-heading margin-top-25">@Admin_Resources.TextVertext</h3>
            <div class="form-group">
                <div class="col-sm-12 nopadding">
                    <div class="control-label">
                        @Html.LabelFor(m => m.Custom1, new { @data_test_selector = "lblCustom1" })
                    </div>
                    <div class="control-md">
                        @Html.TextBoxFor(model => model.Custom1, new { @data_test_selector = "txtCustom1" })
                        @Html.ValidationMessageFor(model => model.Custom1, "", new { @data_test_selector = "valCustom1" })
